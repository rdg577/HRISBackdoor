@{
    ViewBag.Title = "Data Management";
}
@using PagedList.Mvc
@model PagedList.IPagedList<HRISv2.Models.vUserProfile>
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("Index", "DataManagement", FormMethod.Get))
{
    <div class="form-group form-inline">
        @Html.TextBox("CurrentFilter", ViewBag.CurrentFilter as string, new { @class = "form-control", @autocomplete = "off", @style = "width: 400px" })

        <button type="submit" class="btn btn-primary btn-md">
            Search Lastname <span class="glyphicon glyphicon-search"></span>
        </button>
    </div>
}
<div class="panel panel-default">
    <div class="panel-heading" style="background-color: #008800; color: #ffffff"><h4>Employee User Profile</h4></div>
    <table class="table table-hover">
        <thead style="background-color: #00bb00; color: #ffffff">
            <tr>
                <th style="width: 30%">
                    FULLNAME
                </th>
                <th>
                    OFFICE AND GROUP NAME
                </th>
                <th style="width: 20%">&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fullname)

                        <div style="font-size: 8pt;">
                            @Html.DisplayFor(modelItem => item.Position)
                        </div>
                    </td>
                    <td style="font-size: 8pt;">
                        @Html.DisplayFor(modelItem => item.OfficeName) / @Html.DisplayFor(modelItem => item.GroupName)
                    </td>
                    <td>
                        <a href="@Url.Action("EditUserProfile", "DataManagement", new { id = item.EIC })" class="btn btn-xs btn-default" title="Edit BATS Area, Group Name, Attendance Schemme"><span class="glyphicon glyphicon-pencil"></span></a>
                        <a href="@Url.Action("RemoveLoginAccount", "DataManagement", new { id = item.EIC })" class="btn btn-xs btn-default" title="Reset Login Account"><span class="glyphicon glyphicon-refresh"></span></a>
                        <a href="@Url.Action("DisplayServiceRecord", "DataManagement", new { id = item.EIC })" class="btn btn-xs btn-default" title="Remove Duplicate Service Record"><span class="glyphicon glyphicon-remove-sign"></span></a>
                        <a href="@Url.Action("DetailsPlantilla", "DataManagement", new { id = item.EIC })" class="btn btn-xs btn-default" title="Remove Duplicate Plantilla Record"><span class="glyphicon glyphicon-minus-sign"></span></a>
                        <a href="@Url.Action("DetailsUserProfile", "DataManagement", new { id = item.EIC })" class="btn btn-xs btn-default" title="View Profile details"><span class="glyphicon glyphicon-eye-open"></span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new { page, CurrentFilter = ViewBag.CurrentFilter }))

