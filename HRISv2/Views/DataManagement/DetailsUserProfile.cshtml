@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model HRIS.Models.vUserProfile

@{
    ViewBag.Title = "Details";
}

<style type="text/css">
    th {
        text-align: right;
    }
</style>

<h2>Details</h2>
<div class="row">
    <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading" style="background-color: #008800; color: #ffffff"><h4>@Html.DisplayFor(model => model.Fullname)</h4></div>
            <table class="table table-hover">
                <tr>
                    <th>ID NO.:</th>
                    <td>@Html.DisplayFor(model => model.IDNo)</td>
                </tr>
                <tr>
                    <th>FULLNAME:</th>
                    <td>@Html.DisplayFor(model => model.Fullname)</td>
                </tr>
                <tr>
                    <th>BIRTHDATE:</th>
                    @{
                        var bdate = Convert.ToDateTime(Model.birthdate).ToShortDateString();
                        <td>
                            @bdate
                        </td>
                    } 
                </tr>
                <tr>
                    <th>BIRTHPLACE</th>
                    <td>@Html.DisplayFor(model => model.birthplace)</td>
                </tr>
                <tr>
                    <th>POSITION:</th>
                    <td>@Html.DisplayFor(model => model.Position)</td>
                </tr>
                <tr>
                    <th>SUB-POSITION:</th>
                    <td>@Html.DisplayFor(model => model.SubPosition)</td>
                </tr>
                <tr>
                    <th>EMPLOYMENT STATUS:</th>
                    <td>@Html.DisplayFor(model => model.JobStatus)</td>
                </tr>
                <tr>
                    <th>OFFICE NAME:</th>
                    <td>@Html.DisplayFor(model => model.officeName)</td>
                </tr>
                <tr>
                    <th>BATS AREA:</th>
                    <td>@Html.DisplayFor(model => model.BATSArea)</td>
                </tr>
                <tr>
                    <th>WARM BODY OFFICE :</th>
                    <td>@Html.DisplayFor(model => model.officeName)</td>
                </tr>
                <tr>
                    <th>ATTENDANCE SCHEME:</th>
                    <td>@Html.DisplayFor(model => model.AttendanceScheme)</td>
                </tr>
            </table>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "EditUserProfile", new { id = Model.EIC }) |
    @Html.ActionLink("Back to List", "Index")
</p>

